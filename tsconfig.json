{
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": true,
        "module": "es6",
        "target": "es6",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "typeRoots": [
            "./node_modules/@webgpu/types",
            "./node_modules/@types"
        ],
        "outDir": "build"
    },
    "include": [
        "src/**/*.js",
        "rollup.config.mjs"
    ]
}